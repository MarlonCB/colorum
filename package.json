{
  "name": "colorum",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/colorum.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "eslint src/**/*.ts test/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --ext .ts --fix",
    "lint:check": "eslint src/**/*.ts test/**/*.ts --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "bin/new-feature": "node bin/new-feature.js"
  },
  "peerDependencies": {},
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Marlon Carrillo <marloncb2012@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarlonCB/colorum.git"
  },
  "homepage": "https://github.com/MarlonCB/colorum",
  "size-limit": [
    {
      "path": "dist/colorum.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/colorum.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@inquirer/prompts": "^7.2.3",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "chalk": "^5.4.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "size-limit": "^11.1.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
}
